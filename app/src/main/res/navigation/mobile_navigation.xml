    <fragment
        android:id="@+id/navigation_image"
        android:name="com.smttcn.safebox.ui.image.ImageFragment"
        android:label="@string/navigation_image"
        tools:layout="@layout/fragment_image" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.smttcn.safebox.ui.settings.SettingsFragment"
        android:label="@string/navigation_settings"
